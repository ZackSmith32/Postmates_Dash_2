<% include templates/headTwo %>

  <body>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="jumbotron text-center">
        <h1>Login</h1>
        <div class="panel panel-default" style='width: 50%, margin=25%'>
          <div class="panel-heading" >Try it out with data, use this login:</div>
          <div class="panel-body">
              email: johnny@test.com
              <br>
              password: 1234
          </div>
        </div>

        <% if (message != null) { %>
        	<div class="alert-danger"><%= message %></div>
          <br>
        <% } %>

        <form action="/login" method="post">
          <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" />
          </div>
          <div>
            <input type="submit" class="form-control" value="Submit" />
          </div>
        </form>
      </div>
      <hr>
      <span class="fa fa-sign-in"> Don't have an account?<a href="/signup"> Signup</a></span>
      <p>Or go <a href="/">home</a>.</p>
    </div>
  </body>
</html>